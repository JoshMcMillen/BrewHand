{
  "name": "quality-first-copilot",
  "displayName": "Quality-First Copilot",
  "description": "Enhances GitHub Copilot with 'do it right the first time' philosophy",
  "version": "1.0.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "AI",
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "copilot",
    "ai",
    "code quality",
    "best practices",
    "architecture"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:csharp",
    "onLanguage:go",
    "onLanguage:rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "quality-first",
        "fullName": "Quality-First Developer",
        "name": "quality-first",
        "description": "AI assistant focused on production-ready, high-quality code generation",
        "isSticky": true
      }
    ],
    "commands": [
      {
        "command": "quality-first.enhanceSelection",
        "title": "Enhance Selected Code",
        "category": "Quality-First"
      },
      {
        "command": "quality-first.generateWithQuality",
        "title": "Generate Quality Code",
        "category": "Quality-First"
      },
      {
        "command": "quality-first.reviewCode",
        "title": "Review Code Quality",
        "category": "Quality-First"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "quality-first.enhanceSelection",
          "when": "editorHasSelection",
          "group": "quality-first"
        },
        {
          "command": "quality-first.reviewCode",
          "group": "quality-first"
        }
      ],
      "commandPalette": [
        {
          "command": "quality-first.enhanceSelection",
          "when": "editorIsOpen"
        },
        {
          "command": "quality-first.generateWithQuality",
          "when": "editorIsOpen"
        },
        {
          "command": "quality-first.reviewCode",
          "when": "editorIsOpen"
        }
      ]
    },
    "keybindings": [
      {
        "command": "quality-first.enhanceSelection",
        "key": "ctrl+shift+q",
        "mac": "cmd+shift+q",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "quality-first.generateWithQuality",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Quality-First Copilot",
      "properties": {
        "quality-first.defaultModel": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "claude-opus-4",
            "claude-sonnet-4",
            "claude-3.7-sonnet",
            "claude-3.7-sonnet-thinking",
            "claude-3.5-sonnet",
            "gpt-4.5",
            "gpt-4.1",
            "gpt-4o",
            "o3",
            "o3-mini",
            "o4-mini",
            "o1-preview",
            "o1-mini",
            "o1",
            "gemini-2.5-pro",
            "gemini-2.0-flash",
            "gemini-1.5-pro"
          ],
          "description": "Default LLM model preference (auto-selects best available for your subscription)"
        },
        "quality-first.strictMode": {
          "type": "boolean",
          "default": true,
          "description": "Enable strict quality requirements (no TODO comments, comprehensive error handling)"
        },
        "quality-first.includeTests": {
          "type": "boolean",
          "default": false,
          "description": "Automatically generate test suggestions with code"
        },
        "quality-first.architecturalFocus": {
          "type": "string",
          "default": "balanced",
          "enum": [
            "performance",
            "maintainability",
            "security",
            "scalability",
            "balanced"
          ],
          "description": "Primary architectural focus for code generation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/node": "20.x",
    "typescript": "^5.4.5"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/quality-first-copilot"
  },
  "license": "MIT"
}